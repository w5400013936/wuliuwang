/* pages/feedback-list/feedback-list.wxss */
view{
  box-sizing: border-box;
}
.list{
  margin-top: 8rpx;
  position: relative;
}
.list-container{
  height: 90rpx;
  display: flex;
  align-items: center;
  padding: 0 26rpx; 
  position: relative;
  background-color: #fff;
  z-index: 10;
}
.list-left{
  flex: 1;
}
.list-left-title{
  font-size: 29rpx;
  margin-bottom: 10rpx;
}
.list-left-date{
  font-size: 17rpx;
  color: #999999;
}
.list-right-img{
  width: 30rpx;
  height: 30rpx;
  transform: rotate(0deg);
  transition: transform 0.4s;
}
.list-right-img.down{
  transform: rotate(90deg);
}

.list-btns{
  text-align: center;
  position: absolute;
  top: 0;
  right: 0;
  z-index: 5;
}
.list-del{
  display: inline-block;
  width: 104rpx;
  height: 100%;
  background-color: #e60012;
  font-size: 33rpx;
  color: #fefefe;
  line-height: 90rpx;
}

.list-content{
  padding: 18rpx 26rpx;
  border-top: 1rpx solid #ddd;
  background-color: #fff;
  display: none;  
}
 .list-content.down{ 
  display: block;
}
.list-title{
  font-size: 21rpx;
  color: #999999;
}
.list-message{
  font-size: 25rpx;
  color: #666666;
  margin-top: 16rpx;
}
.list-info{
  font-size: 21rpx;
  color: #999999;
  text-align: right;
  margin-top: 16rpx;
}