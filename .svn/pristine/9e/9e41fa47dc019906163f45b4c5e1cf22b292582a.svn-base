// pages/company/company.js
Page({

  /**
   * 页面的初始数据
   */
  data: {
    page: 0,
    qiYe: "",
    rows: []
  },

  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function(options) {
    this.data.page = 0
    this.qiYe("")
  },

  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function() {

  },

  /**
   * 生命周期函数--监听页面显示
   */
  onShow: function() {

  },

  /**
   * 生命周期函数--监听页面隐藏
   */
  onHide: function() {

  },

  /**
   * 生命周期函数--监听页面卸载
   */
  onUnload: function() {

  },

  /**
   * 页面相关事件处理函数--监听用户下拉动作
   */
  onPullDownRefresh: function() {
    var that = this
    wx.showLoading({
      title: '加载中……',
      mask: true
    })
    that.data.page = 0
    that.qiYe(this.data.qiYe)
  },

  /**
   * 页面上拉触底事件的处理函数
   */
  onReachBottom: function() {
    var that = this
    wx.showLoading({
      title: '加载中……',
      mask: true
    })
    that.data.page = that.data.page + 1
    that.qiYe(this.data.qiYe)
  },

  /**
   * 用户点击右上角分享
   */
  onShareAppMessage: function() {
    return {
      title: "公司列表",
    }
  },
  /**
   * 打电话
   */
  call(e) {
    var that = this
    var mobile = that.data.rows[e.currentTarget.dataset.index].mobile
    getApp().call(mobile)
  },
  qiYeInput(e) {
    console.log(e.detail.value)
    this.data.qiYe = e.detail.value
    this.data.page = 0
    this.qiYe(e.detail.value)
  },
  qiYe(value) {
    var that = this
    var json = new Object()
    var mod = "schcompany"
    json.company = value
    wx.request({
      url: getApp().appData.host + "novaild_page", //仅为示例，并非真实的接口地址
      data: {
        "mod": mod,
        "json": JSON.stringify(json),
        "size": "10",
        "page": that.data.page,
        "token": getApp().md5(JSON.stringify(json) + mod)
      },
      header: {
        'content-type': 'application/json', // 默认值
      },
      method: 'POST',
      success: function(res) {
        //请求成功
        if (res.data.state == 1) {
          if (that.data.page == 0) {
            that.data.rows = []
          }
          that.data.page = that.data.page + 1
          if (res.data.data.length > 0) {
            for (let i = 0; i < res.data.data[0].rows.length; i++) {
              var mobileSplit = res.data.data[0].rows[i].mobile.split(",")
              res.data.data[0].rows[i].imgDir = res.data.data[0].rows[i].imgDir.replace("show", "logo")
              if (mobileSplit.length > 0) {
                res.data.data[0].rows[i].phone = mobileSplit[0]
              } else {
                res.data.data[0].rows[i].phone = "暂无"
              }
            }
            Array.prototype.push.apply(that.data.rows, res.data.data[0].rows);
            that.setData({
              rows: that.data.rows,
            })
          } else {
            that.setData({
              rows: that.data.rows
            })
          }
          that.setData({
            isfail: false,
          })
          wx.hideLoading()
        } else { //请求失败
          that.setData({
            isfail: true,
          })
        }
      },
      fail: function(res) {
        that.setData({
          isfail: true,
        })
      },
      complete: function() {
        wx.stopPullDownRefresh();
      }
    })
  },
  search() {
    this.data.page = 0
    this.qiYe(this.data.qiYe)
  },
  /**
   * 跳转公司
   */
  company(e){
      var id = e.currentTarget.dataset.id
      wx.navigateTo({
        url: '/pages/companyInfos/home/home?id='+id,
      })
  }
})